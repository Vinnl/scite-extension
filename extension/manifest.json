{
  "name": "Scite",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Seamlessly pull scite info while you surf the information superhighway",
  "icons": {
    "16": "images/icons/16.png",
    "32": "images/icons/32.png",
    "48": "images/icons/48.png",
    "64": "images/icons/64.png",
    "128": "images/icons/128.png"
  },
  "applications": {
    "gecko": {
      "strict_min_version": "53.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background" : {
    "scripts" : ["background.js"]
  },
  "permissions": [
    "https://api.scite.ai/*",
    "activeTab"
  ],
  "web_accessible_resources": [
      "tally-popup.js"
  ]
}
