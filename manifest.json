{
  "name": "Scite",
  "version": "1.0.0",
  "version_name":"Scite 1.0.0",
  "manifest_version": 2,
  "description": "Seamlessly pull scite info while you surf the information superhighway",
  "applications": {
    "gecko": {
      "strict_min_version": "53.0"
    }
  },
  "content_security_policy": "script-src 'self' object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "permissions": [
    "https://api.scite.ai/*",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
      "scite-widget.html"
  ]
}
